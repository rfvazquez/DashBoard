}

<script type="text/javascript" src="https://www.google.com/jsapi"></script>
<script type="text/javascript" src="https://www.gstatic.com/charts/loader.js"></script>

@Html.Hidden("ResumoDashBoardOperadorUrl", Url.Action("ResumoDashBoardOperador", "Relatorio"))
@Html.Hidden("DetalhadoDashBoardOperadorUrl", Url.Action("DetalhadoDashBoardOperador", "Relatorio"))
@Html.Hidden("DetalhadoDashBoardOperadorPorOperacaoUrl", Url.Action("DetalhadoDashBoardOperadorPorOperacao", "Relatorio"))

@Html.Hidden("DashBoardConversaoAptasOperadorUrl", Url.Action("DashBoardConversaoAptasOperador", "Relatorio"))
